val_2 = 0
for i in range(len(p_x)):
    for j in range(len(p_yx)):
        val_2 = val_2 - p_x[i]*p_yx[j]*(math.log(p_yx[j],2))
print("H(Y|X) is :",val_2)

val_3 = val + val_2 
print("H(X,Y) is :", val_3)

