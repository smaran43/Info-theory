val = 0
for i in range(len(p_x)):
    val = val - p_x[i]*(math.log(p_x[i],2))
print("H(X) is : ",val)

p_y = []
for i in range(len(p_x)):
    ele = 1 - p_x[i]
    p_y.append(ele)

val_1 = 0
for i in range(len(p_y)):
    val_1 = val_1 - p_y[i]*(math.log(p_y[i],2))
print("H(Y) is : ",val_1)

