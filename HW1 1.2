long combi (int n, int m)
    {
        return facto(n)/(facto(m)*facto(n-m)) ;
    }
    
    long facto (int i)
    {
        long long fact = 1 ;
        while (i > 0)
        {
            fact = fact*i ;
            i--;
        }
        return fact ;
    }
